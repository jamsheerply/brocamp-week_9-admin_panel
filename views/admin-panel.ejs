<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for the admin panel */
        body {
            background-color: #f0f0f0; /* Background color */
            font-family: Arial, sans-serif; /* Font family */
        }
        .navbar {
            background-color: #333; /* Navbar background color */
        }
        .navbar-brand {
            color: #fff; /* Navbar brand text color */
        }
        .navbar-toggler-icon {
            background-color: #fff; /* Navbar toggler icon color */
        }
        .nav-item.nav-link {
            color: #fff; /* Navbar link text color */
        }
        .container {
            background-color: #fff; /* Container background color */
            border-radius: 10px; /* Container border radius */
            padding: 20px; /* Container padding */
            box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Container box shadow */
        }
        .btn-success {
            background-color: #27ae60; /* Button background color */
            border-color: #27ae60; /* Button border color */
        }
        .btn-success:hover {
            background-color: #219f56; /* Hover background color */
            border-color: #219f56; /* Hover border color */
        }
        .table {
            background-color: #fff; /* Table background color */
        }
        th, td {
            color: #333; /* Table text color */
        }
        .btn-primary {
            background-color: #3498db; /* Primary button background color */
            border-color: #3498db; /* Primary button border color */
        }
        .btn-primary:hover {
            background-color: #2980b9; /* Hover background color */
            border-color: #2980b9; /* Hover border color */
        }
        .btn-danger {
            background-color: #e74c3c; /* Danger button background color */
            border-color: #e74c3c; /* Danger button border color */
        }
        .btn-danger:hover {
            background-color: #c0392b; /* Hover background color */
            border-color: #c0392b; /* Hover border color */
        }
        .bg-light {
            background-color: #f9f9f9; /* Footer background color */
        }
        .text-center {
            color: #333; /* Footer text color */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/" class="btn btn-danger">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- Add your content here -->

        <!-- Add button and search input -->
        <div class="d-flex justify-content-between mb-3">
            <a href="/add-user"><button class="btn btn-success">Add</button></a>
            <div class="form-inline">
                <input type="text" class="form-control mr-sm-2" placeholder="Search">
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
            </div>
        </div>

        <!-- Sample table with buttons -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample data rows -->
                <tr>
                    <td>1</td>
                    <td>User1</td>
                    <td>user1@example.com</td>
                    <td>
                        <a href="/edit-user"><button class="btn btn-primary">Edit</button></a>
                        <a href="/delete-user"><button class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
                <!-- Add more data rows as needed -->
            </tbody>
        </table>
    </div>

    <footer class="bg-light text-center py-3">
        <div class="container">
            <p class="mb-0">Logged in as: <strong>User123</strong> | user123@example.com</p>
        </div>
    </footer>

    <!-- Add your JavaScript and Bootstrap JS links here -->
    <!-- Link to Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
